<!DOCTYPE html>
<html>
  <head>
    <title>Private Events</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-success global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar has-background-dark">
      <div class="navbar-brand">
        <%= link_to root_path, class:'navbar-item' do %>
          <h1 class="title is-5">Members Only</h1>
        <% end %>
        <div class = "navbar-burger burger" data-target="navbarPrivateEvents">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </div>
      </div>

      <div id="navbarPrivateEvents" class="navbar-menu is-active">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              <% if user_signed_in? %>
                <% if params[:controller] == 'users' && params[:action] == 'show' %>
                  <p class="control">
                    <%= link_to 'New Event', new_event_path, class: 'button is-dark' %>
                  </p>
                <% end %>
                <p class="control">
                  <%= link_to 'Your Events', user_path(id: current_user.id), class: 'button is-dark' %>
                </p>
                <p class="control">
                  <%= link_to "#{current_user.name}'s Profile", edit_user_registration_path, class: 'button is-dark' %>
                </p>
                <p>
                  <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'button' %>
                </p>
              <% else %>
                <p class="control">
                  <%= link_to 'Sign In', new_user_session_path, class: 'button is-dark' %>
                </p>
                <p class="control">
                <%= link_to 'Sign Up', new_user_registration_path, class: 'button' %>
              <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <section class="section">
      <div class="container">
        <div class="columns is-centered">
          <div class="column is-half">
            <%= yield %>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
